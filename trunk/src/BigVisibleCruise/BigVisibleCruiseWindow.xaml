<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="BigVisibleCruise.BigVisibleCruiseWindow"
    xmlns:local="clr-namespace:BigVisibleCruise;assembly="
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    Icon="Cinema-Display-graphite.ico"
    Title="Big Visible Cruise"
    KeyDown="Window_KeyDown">

  <Window.Resources>

    <local:BuildStatusToColorConverter x:Key="BuildStatusToColorConverter" />
    <local:BuildNameToHumanizedNameConverter x:Key="BuildNameToHumanizedNameConverter" />


    <DataTemplate x:Key="SimpleStatusDataTemplate">
      <Border BorderBrush="Black" BorderThickness="1">
        <TextBlock TextAlignment="Center"
                   Padding="3"
                   Background="{Binding Path=CurrentBuildStatus, Converter={StaticResource BuildStatusToColorConverter}}"
                   Text="{Binding Path=Name, Converter={StaticResource BuildNameToHumanizedNameConverter}}" />
      </Border>
    </DataTemplate>

    <Style x:Key="UniformStatusStyle" TargetType="{x:Type ItemsControl}">
      <Setter Property="ItemsControl.ItemsPanel">
        <Setter.Value>
          <ItemsPanelTemplate>
            <UniformGrid />
          </ItemsPanelTemplate>          
        </Setter.Value>
      </Setter>
      <Setter Property="ItemTemplate" Value="{StaticResource SimpleStatusDataTemplate}" />
    </Style>

    <Style x:Key="StackedStatusStyle" TargetType="{x:Type ItemsControl}">
      <Setter Property="ItemTemplate" Value="{StaticResource SimpleStatusDataTemplate}" />
    </Style>
    
  </Window.Resources>

  <Viewbox Stretch="Fill">
    <ItemsControl ItemsSource="{Binding}" Style="{StaticResource StackedStatusStyle}" />
  </Viewbox>

</Window>
